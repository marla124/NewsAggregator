@model SourceModelAggregating

<div class="container text-center">
    <div class="row">
        <div class="card col-12 col-sm-12 col-lg-6" >
          <form class="card-body" asp-controller="News" asp-action="Aggregate" method="post">
                <input type="hidden" asp-for="Id"/>
                <h5 class="card-title">Are you sure that you want to get news from @Model.Title</h5>
                <p class="card-text">This operation take some time and canaffect application usage</p>
                <button class="btn btn-primary">Confirm</button>
                <a asp-controller= "Source" asp-action="List" class="btn btn-primary">Cancel</a>

          </form>
        </div>
    </div>
</div>